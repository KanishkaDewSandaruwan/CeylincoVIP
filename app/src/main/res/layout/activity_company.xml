<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/artboard_1"
    tools:context=".CompanyDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/btnbacktodealerreg"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Company Details"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:text="Company Name"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <EditText
                android:id="@+id/addcompanyname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="#1C7016"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />


            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Company Address"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="@+id/addcompanyAddress"
                app:layout_constraintTop_toBottomOf="@+id/addcompanynumber" />

            <EditText
                android:id="@+id/addcompanyAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="#1C7016"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/addcompanynumber"
                app:layout_constraintStart_toStartOf="@+id/addcompanynumber"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Email Address "
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="@+id/addcompanyAddress"
                app:layout_constraintTop_toBottomOf="@+id/addcompanyAddress" />

            <EditText
                android:id="@+id/addcompanyemailaddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#1C7016"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/addcompanyAddress"
                app:layout_constraintStart_toStartOf="@+id/addcompanyAddress"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Branch "
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="@+id/addcompanyemailaddress"
                app:layout_constraintTop_toBottomOf="@+id/addcompanyemailaddress" />

            <EditText
                android:id="@+id/addcompanybranch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#1C7016"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/addcompanyemailaddress"
                app:layout_constraintStart_toStartOf="@+id/addcompanyemailaddress"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Phone Number "
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="@+id/addcompanynumber"
                app:layout_constraintTop_toBottomOf="@+id/addcompanyname" />

            <EditText
                android:id="@+id/addcompanynumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:backgroundTint="#1C7016"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/addcompanyname"
                app:layout_constraintStart_toStartOf="@+id/addcompanyname"
                app:layout_constraintTop_toBottomOf="@+id/textView1" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnbacktodealerreg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#1C7016"
        android:backgroundTintMode="add"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:text="BACK"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#1C7016"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/btnsubmitdealerreg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#1C7016"
        android:backgroundTintMode="add"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:text="NEXT"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="#1C7016"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>