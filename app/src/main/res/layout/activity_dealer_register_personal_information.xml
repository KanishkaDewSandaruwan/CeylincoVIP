<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DealerRegisterPersonalInformation"
    android:background="@drawable/artboard_1">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Personal Information"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/btnDealerRegisterPersonal_toLogin"
        app:layout_constraintTop_toBottomOf="@id/textView7"
>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:text="Full Name"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="@+id/adDealerfullname"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
        android:id="@+id/adDealerfullname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#1C7016"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Address "
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/addDealerAddress"
        app:layout_constraintTop_toBottomOf="@+id/adDealerfullname" />

    <EditText
        android:id="@+id/addDealerAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#1C7016"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/adDealerfullname"
        app:layout_constraintStart_toStartOf="@+id/adDealerfullname"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="NIC "
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/addDealerAddress"
        app:layout_constraintTop_toBottomOf="@+id/addDealerAddress" />

    <EditText
        android:id="@+id/addDealernic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#1C7016"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/addDealerAddress"
        app:layout_constraintStart_toStartOf="@+id/addDealerAddress"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Whatsapp Number "
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/addDealernic"
        app:layout_constraintTop_toBottomOf="@+id/addDealernic" />

    <EditText
        android:id="@+id/addDealerwhatsapp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#1C7016"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/addDealernic"
        app:layout_constraintStart_toStartOf="@+id/addDealernic"
        app:layout_constraintTop_toBottomOf="@+id/textView6_1" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnDealerRegisterPersonal_toLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#1C7016"
        android:backgroundTintMode="add"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:text="BACK"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#1C7016"
        app:strokeWidth="2dp" />


    <Button
        android:id="@+id/btnDealerRegister_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#1C7016"
        android:backgroundTintMode="add"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:text="NEXT"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="#1C7016"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
